{
    "compilerOptions": {
      "outDir": "./dist/",
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "lib": [
        "es2019"
      ]
    },
    "include": [
        "src/**/*",
        "src/*"
    ],
    "exclude": [
        "test/**/*"
    ]
}